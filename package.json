        "@tauri-apps/plugin-updater": "^2.7.1",
        "@types/node": "^24.0.7",
        "antd": "^5.25.3",
        "axios": "^1.10.0",
        "dayjs": "^1.11.13",
        "dotenv": "^17.0.0",
        "nodemailer": "^7.0.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsx": "^4.20.3"
    },
    "devDependencies": {
        "@tauri-apps/cli": "^2",
        "@types/nodemailer": "^6.4.17",

{
    "name": "Inventario CappellettoShop",
    "private": true,
    "version": "3.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "tauri": "tauri",
        "version:sync": "node scripts/update-version.cjs",
        "version:patch": "npm version patch --no-git-tag-version && npm run version:sync",
        "version:minor": "npm version minor --no-git-tag-version && npm run version:sync",
        "version:major": "npm version major --no-git-tag-version && npm run version:sync",
        "version:set": "node scripts/update-version.cjs",
        "stock:update": "tsx scripts/stock-manager.ts",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:run": "vitest run"
    },
    "dependencies": {
        "@ant-design/icons": "^6.0.0",
